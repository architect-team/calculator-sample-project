{
  "name": "architect/addition-service-grpc",
  "description": "Addition service",
  "keywords": [
    "architect",
    "math",
    "grpc"
  ],
  "author": "David Thor",
  "language": "node",
  "api": {
    "type": "grpc",
    "definitions": [
      "./service.proto"
    ]
  },
  "dependencies": {},
  "parameters": {
    "DB_PRIMARY_HOST": {
      "default": {
        "valueFrom": {
          "datastore": "primary",
          "value": "$HOST"
        }
      }
    },
    "DB_PRIMARY_PORT": {
      "default": {
        "valueFrom": {
          "datastore": "primary",
          "value": "$PORT"
        }
      }
    },
    "DB_PRIMARY_USER": {
      "default": {
        "valueFrom": {
          "datastore": "primary",
          "value": "$POSTGRES_USER"
        }
      }
    },
    "DB_PRIMARY_PASSWORD": {
      "default": {
        "valueFrom": {
          "datastore": "primary",
          "value": "$POSTGRES_PASSWORD"
        }
      }
    },
    "DB_PRIMARY_DB": {
      "default": {
        "valueFrom": {
          "datastore": "primary",
          "value": "$POSTGRES_DB"
        }
      }
    }
  },
  "datastores": {
    "primary": {
      "image": "postgres:10",
      "port": 5432,
      "parameters": {
        "POSTGRES_USER": {
          "alias": "username",
          "default": "postgres"
        },
        "POSTGRES_PASSWORD": {
          "alias": "password",
          "default": "architect"
        },
        "POSTGRES_DB": {
          "alias": "name",
          "default": "addition_service"
        }
      }
    }
  },
  "debug": "npm run dev",
  "interfaces": {
    "main": 8080
  }
}
